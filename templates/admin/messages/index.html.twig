{% extends 'backendindex.html.twig' %}

{% block title %}Messages index{% endblock %}

{% block body %}

<div class="main-panel">
<div class="content-wrapper">
    <h1>Messages index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>actions</th>
                <th>status</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.id }}</td>
                <td>{{ message.name }}</td>
                <td>{{ message.email }}</td>
                <td>{{ message.subject }}</td>
                <td>{{ message.message }}</td>
                <td>{{ message.status }}</td>
                <td>
                    <a href="{{ path('admin_messages_show', {'id': message.id}) }}">show</a>
                    <a href="{{ path('admin_messages_edit', {'id': message.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_messages_new') }}">Create new</a>
    </div>
{% endblock %}
