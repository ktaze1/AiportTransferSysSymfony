{% extends 'backendindex.html.twig' %}

{% block title %}Setting index{% endblock %}

{% block body %}
<div class="main-panel">
<div class="content-wrapper">
    <h1>Reservations</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ reservation.userid }}</td>
            </tr>
            <tr>
                <th>Transportsid</th>
                <td>{{ reservation.transportsid }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ reservation.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ reservation.surname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ reservation.email }}</td>
            </tr>
            <tr>
                <th>Departuretime</th>
                <td>{{ reservation.departuretime ? reservation.departuretime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ reservation.total }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ reservation.status }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ reservation.updatedAt ? reservation.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_reservations_index') }}">back to list</a>

    <a href="{{ path('admin_reservations_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('admin_reservations/_delete_form.html.twig') }}
    </div>
{% endblock %}
