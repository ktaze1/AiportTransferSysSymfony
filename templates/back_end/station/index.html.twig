{% extends 'backendindex.html.twig' %}

{% block title %}Station index{% endblock %}

{% block body %}

<SCRIPT language="JavaScript" type="text/javascript">
    function openWin( windowURL, windowName, windowFeatures) { window.open(windowURL, windowName, );}
</SCRIPT>

<div class="main-panel">
<div class="content-wrapper">
    <h1>Station index</h1>
 
    <table class="table">
    <a href="{{ path('admin_station_new') }}" class="btn btn-primary btn-fw">Create new</a>
    
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Keywords</th>
                <th>Description</th>
                <th>Image</th>
                <th>Address</th>
                <th>City</th>
                <th>Country</th>
                <th>Gallery</th>
                <th>Transportations</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for station in stations %}
            <tr>
                <td>{{ station.id }}</td>
                <td>{{ station.title }}</td>
                <td>{{ station.keywords }}</td>
                <td>{{ station.description }}</td>
                <td><img src="{{ asset('uploads/images/' ~ station.image)}}"></td>
                <td>{{ station.address }}</td>
                <td>{{ station.city }}</td>
                <td>{{ station.country }}</td>
                <td>
                    <a href="javascript:openWin('{{ path('admin_image_new', {'id': station.id }) }}', '', 'toolbar=no,location=no,directories=0,status=no,top= 50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600')">
                        link
                    </a>
                </td>
                <td>
                    <a href="javascript:openWin('{{ path('admin_transports_new', {'id': station.id }) }}', '', 'toolbar=no,location=no,directories=0,status=no,top= 50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600')">
                        Transports
                    </a>
                </td>
                <td>{{ station.status }}</td>
                <td>{{ station.createdAt ? station.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ station.updatedAt ? station.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <div class="row">
                        <a href="{{ path('admin_station_show', {'id': station.id}) }}" class="btn btn-outline-primary btn-fw"> Show </a>
                        <a href="{{ path('admin_station_edit', {'id': station.id}) }}"  class="btn btn-secondary btn-fw"> Edit </a>
                        {{ include('back_end/station/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
   
{% endblock %}
