{% extends 'backendindex.html.twig' %}

{% block title %}User List{% endblock %}

{% block body %}



    <div class="main-panel">
    <div class="content-wrapper"> 
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Image</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.surname }}</td>
                <td><img src="{{ asset('uploads/images/' ~ user.image)}}" style="height: 80px; border-radius: 0px"></td>
                <td>{{ user.status }}</td>
                <td>
                  <div class="row">
                    <a href="{{ path('admin_user_show', {'id': user.id}) }}" class="btn btn-outline-primary btn-fw">show</a>
                    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-secondary btn-fw">edit</a>
                    {{ include('back_end/user/_delete_form.html.twig') }}
                  </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_user_new') }}">Create new</a>
    </div>
{% endblock %}
